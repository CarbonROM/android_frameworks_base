<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal" >
    <Button
        android:id="@+id/button_system"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:drawableTop="@drawable/ic_qs_power_system"
        android:text="@string/quick_settings_button_system"
        android:textAlignment="center"
        android:textColor="@color/qs_power_tile_text"
        android:background="@color/qs_power_tile_background"
        android:elevation="2dp"
        style="@style/QSBorderlessButton" />
    <Button
        android:id="@+id/button_recovery"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:drawableTop="@drawable/ic_qs_power_recovery"
        android:text="@string/quick_settings_button_recovery"
        android:textAlignment="center"
        android:textColor="@color/qs_power_tile_text"
        android:background="@color/qs_power_tile_background"
        android:elevation="2dp"
        style="@style/QSBorderlessButton" />
    <Button
        android:id="@+id/button_bootloader"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:drawableTop="@drawable/ic_qs_power_bootloader"
        android:text="@string/quick_settings_button_bootloader"
        android:textAlignment="center"
        android:textColor="@color/qs_power_tile_text"
        android:background="@color/qs_power_tile_background"
        android:elevation="2dp"
        style="@style/QSBorderlessButton" />
</LinearLayout>
